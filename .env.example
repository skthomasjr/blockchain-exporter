# Blockchain Exporter Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Application Configuration (Optional - defaults shown)
# =============================================================================

# Logging Configuration
# LOG_LEVEL=INFO                    # Root log level (INFO, DEBUG, WARNING, ERROR, CRITICAL)
# LOG_FORMAT=text                   # Logging format: "text" or "json"
# LOG_COLOR_ENABLED=true            # Enable ANSI color output for text logging

# Poller Configuration
# POLL_DEFAULT_INTERVAL=5m          # Fallback poll interval when chain omits poll_interval (e.g., "5m", "10s", "1h")
# MAX_FAILURE_BACKOFF_SECONDS=900   # Maximum backoff time in seconds for exponential backoff on failures
# RPC_REQUEST_TIMEOUT_SECONDS=10.0  # Web3 HTTP request timeout in seconds

# Health Check Configuration
# READINESS_STALE_THRESHOLD_SECONDS=300  # Seconds before a successful poll is considered stale for readiness checks

# Server Configuration
# HEALTH_PORT=8080                  # Port for health check endpoints (/health, /health/livez, /health/readyz)
# METRICS_PORT=9100                 # Port for Prometheus metrics endpoint (/metrics)

# Configuration File Path
# BLOCKCHAIN_EXPORTER_CONFIG_PATH=./config.toml  # Path to config.toml (file or directory)
